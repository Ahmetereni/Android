    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="2.5dp"
        android:orientation="horizontal"
        android:paddingTop="2.5dp"
        android:paddingBottom="2.5dp"
