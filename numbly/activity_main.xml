            android:layout_weight="1"
            android:gravity="center"
            android:hint="_  _  _  _"
            android:maxLength="4"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/result2"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
